
     <%- include("../partials/head.ejs") %>

<body>
    <%- include("../partials/header.ejs")  %>

    <main>
        <section>
            <div class="contenedor-main">
                <div class="titulo-login">
                    <p>Inicia Sesión</p>
                </div>
                <div class="form-login position-re">
                    <form id="userLogin" action="/users/login" method="post" >
                        <input type="text" name="email" id="email" value="<%=locals.oldData ? oldData.email : null %>" placeholder="Email">
                         <% if (locals.errors && errors.email) { %>
                            <span class="error-msg"><%=errors.email.msg%></span>
                        <% } %>
                        <span class="error-msg" id="emailError"></span>
                        <div class="passwordDiv">
                        <label for="password"></label>
                        <input type="password" name="password" id="password" placeholder="Contraseña">
                        <span class="fas fa-eye-slash" id="ojito"></span>
                    </div>
                        <% if (locals.errors && errors.password) { %>
                            <span class="error-msg"><%=errors.password.msg%></span>
                        <% } %>
                        
                        <span class="error-msg" id="passwordError"></span>

                        <label class="rememberpass">
                            <input type="checkbox" name="remember_user" value="ok" class="checkbox">Recordame
                        </label>

                        <div class="botones">
                            <div class="boton-registrar">
                                <button type="button"><a href="/users/register">Registrarse</a></button id="submit"></button>
                            </div>
                            <div class="boton-confirmar">
                                <button type="submit">Confirmar</button id="submit"></button>
                            </div>

                        </div>
                        <div class="forgotpass">
                            <a href="#">¿Olvidaste tu contraseña?</a>
                        </div>
                    </form>



                </div>

            </div>
        </section>
    </main>
<script src="/javascripts/userLogin.js"></script>
<script src="/javascripts/passwordEye.js"></script>


    <!--------FOOTER-->
    <%-include("../partials/footer.ejs") %>  
</body>

