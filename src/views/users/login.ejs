
     <%- include("../partials/head.ejs") %>

<body>
    <%- include("../partials/header.ejs")  %>

    <main>
        <section>
            <div class="contenedor-main">
                <div class="titulo-login">
                    <p>Inicia Sesión</p>
                </div>
                <div class="form-login">
                    <form action="/users/login" method="post">
                        <label for="nombre"> </label>
                        <input type="text" name="email" id="email" value="<%=locals.oldData ? oldData.email : null %>" placeholder="Email" required>
                        <% if (locals.errors && errors.email) { %>
                            <span class="error-msg"><%=errors.email.msg%></span>
                        <% } %>
                        <label for="password"></label>
                        <input type="password" name="password" id="password" placeholder="Contraseña" required>
                        <% if (locals.errors && errors.password) { %>
                            <span class="error-msg"><%=errors.password.msg%></span>
                        <% } %>
                        <label class="rememberpass">
                            <input type="checkbox" name="recordarpass" value="ok" class="checkbox">Recordar mi
                            Contraseña
                        </label>

                        <div class="botones">
                            <div class="boton-registrar">
                                <button type="button"><a href="/users/register">Registrarse</a></button id="submit"></button>
                            </div>
                            <div class="boton-confirmar">
                                <button type="submit">Confirmar</button id="submit"></button>
                            </div>

                        </div>
                        <div class="forgotpass">
                            <a href="#">¿Olvidaste tu contraseña?</a>
                        </div>
                    </form>



                </div>

            </div>
        </section>
    </main>


    <!--------FOOTER-->
    <%- include("../partials/footer.ejs")  %>  

</body>

