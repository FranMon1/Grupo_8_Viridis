<body>
   <!--Header-->
   <%- include('../partials/header.ejs') %>
   <!--Main-->
<main>
    <section class="inventory-section">
        <div class="title"> Inventory</div>
        
            <a href="/products/create"><button class="create-button"> Agregar producto</button></a>
        
           
            <div class="category-section"> 
                <div style="color:rgba(255, 137, 58, 0.815)">ID</div>
                <div>Nombre</div>
                <div>Categoria</div>
                <div>Precio</div>
                <div>Cantidad</div>
                <div>Disponibilidad</div>
                <div>Medida</div>
                <div>Color</div>
                <div>Marca</div>
                <div>Edit / Delete</div>
               
            </div>
            <% product.forEach(product => { %>
            <div class="productItems">
             <%=product.id%>
             <%=product.name%>
             <%=product.category%>
             <%=product.price%>
             <%=product.quantity%>
             <%=product.id%>
             <%=product.size%>
             <%=product.color%>
             <%=product.brand%>

            </div>
            <% }) %>
    
     
    </section>
</main>
   <!--Footer-->
   <%- include('../partials/footer.ejs') %>
</body>
</html>